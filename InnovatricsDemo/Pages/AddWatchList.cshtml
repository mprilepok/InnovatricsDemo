@page
@model InnovatricsDemo.Pages.AddWatchListModel
@{
    ViewData["Title"] = "Add watch list";
}
@section scripts{
<partial name="_ValidationScriptsPartial" />
}

<div class="text-center">
    <h1>Add watch list</h1>
</div>
<h3>@ViewData["result"]</h3>

<form class="form-group" method="post">
    <div class="form-group">
        <label for="DisplayName" class="col-sm-2 control-label">Display name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" data-val="true" data-val-required="The display name field is required." id="DisplayName" name="DisplayName">
            <span class="field-validation-valid" data-valmsg-for="DisplayName" data-valmsg-replace="true">
        </div>
    </div>
    <div class="form-group">
        <label for="FullName" class="col-sm-2 control-label">Full name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" data-val="true" data-val-required="The full name field is required." id="FullName" name="FullName">
            <span class="field-validation-valid" data-valmsg-for="FullName" data-valmsg-replace="true">
        </div>
    </div>
    <div class="form-group">
        <label for="Threshold" class="col-sm-2 control-label">Threshold</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" data-val="true" data-val-required="The threshold field is required." id="Threshold" name="Threshold" value="0">
            <span class="field-validation-valid" data-valmsg-for="Threshold" data-valmsg-replace="true">
        </div>
    </div>
    <div class="form-group">
        <label for="PreviewColor" class="col-sm-2 control-label">Preview color</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="PreviewColor" name="PreviewColor">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-outline-dark">Add</button>
        </div>
    </div>
</form>