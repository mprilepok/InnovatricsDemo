@page
@model InnovatricsDemo.Pages.AddMemberModel
@{
    ViewData["Title"] = "Add memeber to watch list";
}
@section scripts{
<partial name="_ValidationScriptsPartial" />
}

<div class="text-center">
    <h1>Add memeber to watchlist</h1>
</div>
<h3>@ViewData["result"]</h3>

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" data-val="true" data-val-required="The UserName field is required." id="Name" name="Name">
            <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true">
        </div>
    </div>
    <div class="form-group">
        <label for="Watchlist" class="col-sm-2 control-label">Watch list</label>
        <div class="col-sm-10">
            <select class="form-control" asp-items="Model.Options" d data-val="true" data-val-required="The watch list field is required." id="watchListId" name="watchListId"></select>
            <span class="field-validation-valid" data-valmsg-for="watchListId" data-valmsg-replace="true">
        </div>
    </div>
    <div class="form-group">
        <label for="Photo" class="col-sm-2 control-label">Photo</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" asp-for="Upload" data-val="true" data-val-required="The Photo field is required." id="Photo" name="Photo">
            <span class="field-validation-valid" data-valmsg-for="Photo" data-valmsg-replace="true">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-outline-dark">Add</button>
        </div>
    </div>
</form>